# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to Git!

# Application Settings
NODE_ENV=production
PORT=3000

# Database Configuration (MySQL - optional, JSON fallback available)
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_PORT=3306

# Email (SMTP) Configuration (optional, mailto fallback available)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=your_email@example.com

# Admin Configuration
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAIL=admin@example.com

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Subdomains (optional)
ADMIN_SUBDOMAIN=admin.yourdomain.com
STAGING_SUBDOMAIN=staging.yourdomain.com

# Staging Configuration (optional)
STAGING_DB_NAME=staging_db_name
STAGING_EMAIL_ENABLED=false
